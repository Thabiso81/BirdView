<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/shape_signup_sign_in">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Settings"
                android:textSize="25sp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </LinearLayout>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"
            android:textOff="Light Mode"
            android:textOn="Dark Mode"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            app:switchTextAppearance="@style/switchTextAppearance"
            android:textColorHighlight="@color/white"
            android:thumb="@drawable/switch_thumb"
            app:track="@drawable/switch_track"
            app:showText="true"/>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"
            android:textOff="Metric"
            android:textOn="Imperial"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            app:switchTextAppearance="@style/switchTextAppearance"
            android:textColorHighlight="@color/white"
            android:thumb="@drawable/switch_thumb"
            app:track="@drawable/switch_track"
            app:showText="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Distance"
                android:textColor="@color/grey_1"
                android:layout_marginLeft="20dp"
                android:textSize="25sp"
                android:fontFamily="@font/poppins_medium"/>
            <com.google.android.material.slider.Slider
                android:id="@+id/discreteSlider"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:valueFrom="0.0"
                android:valueTo="200.0"
                app:trackColorInactive="@color/light_grey"
                app:trackColorActive="@color/dark_grey"
                app:thumbRadius="20dp"
                app:thumbColor="@color/blue"
                app:trackHeight="30dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.widget.Button
                android:id="@+id/btn_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="80dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_button_rounded"
                android:text="Sign Out"
                android:padding="13dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAllCaps="false"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>