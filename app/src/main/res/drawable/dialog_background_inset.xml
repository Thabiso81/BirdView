<inset
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:drawable="@drawable/rounded_dialog_background"
    android:insetRight="20dp"
    android:insetLeft="20dp"
    android:insetTop="20dp"
    android:insetBottom="20dp">
</inset>